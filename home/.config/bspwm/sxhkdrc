#################################################################
#     MULTIMEDIA KEYS
#################################################################

#Raises volume
XF86AudioRaiseVolume
    amixer set Master 10%+

#Lowers volume
XF86AudioLowerVolume
    amixer set Master 10%-

#Mute
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

#Playerctl works for Pragha, Spotify and others
#Delete the line for playerctl if you want to use mpc
#and replace it with the corresponding code
#mpc works for e.g.ncmpcpp
#mpc toggle
#mpc next
#mpc prev
#mpc stop

#PLAY
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

#Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

#Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10

#Thunar Home Explorer
XF86Explorer
    thunar 

#Web Browser
XF86HomePage
    firefox

#Search programs
XF86Search
    xfce4-appfinder 

#Audio Music
XF86Tools
    clementine
    
# silencia ou retorna o volume (alt + pressionar bot√£o do meio do mouse)
alt + @button2
  volume -t

# aumenta o volume (alt + roda do mouse acima)
alt + @button4
  volume -a

# diminui o volume (alt +  roda do mouse abaixo)
alt + @button5
  volume -b

# Toggle right click context menu.
~button3
	  xqp 0 $(xdo id -N Bspwm -n root) && jgmenu_run 
